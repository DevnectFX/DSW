@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Le styles -->
    <link href="/common/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
        height: 800px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @@media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    </style>
    <link href="/common/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="/common/kendoui.web/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="/common/kendoui.web/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="/common/kendoui.web/js/jquery.min.js"></script>
    <script src="/common/kendoui.web/js/kendo.all.min.js"></script>


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="/common/bootstrap/js/html5shiv.js"></script>
    <![endif]-->
    
    <script>
        $(document).ready(function()
        {
            $("#panelbar").kendoPanelBar({
    			expandMode: "single"
			});
		});
    </script>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#">관리자 페이지</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <a href="#" class="navbar-link">관리자(admin)</a>&nbsp;&nbsp;&nbsp;<a href="#" class="navbar-link"><i class="icon-remove-sign"></i> Logout</a>
            </p>
            <ul class="nav">
              <li class="active"><a href="#">시스템관리</a></li>
              <li><a href="#about">메뉴2</a></li>
              <li><a href="#contact">메뉴3</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span3">
          <div class="k-content">
          	<ul id="panelbar">
          		<li class="k-state-active"><span class="k-link k-state-selected"><i class="icon-th-list"></i> 메뉴관리</span>
          			<ul>
          				<li><i class="icon-chevron-right"></i> 메뉴등록관리</li>
          				<li><i class="icon-chevron-right"></i> 사용자메뉴관리</li>
          				<li><i class="icon-chevron-right"></i> 그룹메뉴관리</li>
      				</ul>
          		</li>
          		<li><span class="k-link"><i class="icon-th-list"></i> 사용자/그룹관리</span>
          			<ul>
          				<li><i class="icon-chevron-right"></i> 사용자관리</li>
          				<li><i class="icon-chevron-right"></i> 그룹관리</li>
      				</ul>
      			</li>
          		<li><span class="k-link"><i class="icon-th-list"></i> 사용자/그룹관리</span>
          			<ul>
          				<li><i class="icon-chevron-right"></i> 사용자관리</li>
          				<li><i class="icon-chevron-right"></i> 그룹관리</li>
      				</ul>
      			</li>
          	</ul>
          </div>
        </div><!--/span-->
        <div class="span9">
        	@RenderBody()
        </div><!--/span-->
      </div><!--/row-->

      <hr />

      <footer>
        <p>&copy; Company 2013</p>
      </footer>

    </div><!--/.fluid-container-->
  </body>
</html>
